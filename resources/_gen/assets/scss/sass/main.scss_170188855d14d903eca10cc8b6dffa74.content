@import "https://fonts.googleapis.com/css2?family=Alkatra&family=Noto+Sans&family=Poppins&display=swap";*{margin:0;padding:0;font-family:alkatra}body{scrollbar-width:none;scroll-behavior:smooth;-ms-overflow-style:none}body::-webkit-scrollbar{display:none}header{display:flex;justify-content:center;align-items:center;background-color:#f1f1f1;position:fixed;top:0;left:0;right:0}header #navbar{display:flex;justify-content:center;align-items:center;justify-content:space-between;width:80%}header .logo{color:#3498db;font-size:24px}header .nav-menu{display:none}header .nav-bar span{padding-left:10px}.hero-section{margin:0;padding:0;height:100vh;background-color:#f1f1f1;display:flex;justify-content:center;align-items:center}.hero-section div{display:flex;justify-content:center;align-items:center;flex-direction:column}.hero-section div img{width:120px;height:auto;border-radius:50%;border:5px solid #000}.hero-section div .socials{width:25rem;flex-direction:row;justify-content:space-between}.hero-section div .socials a{text-decoration:none}